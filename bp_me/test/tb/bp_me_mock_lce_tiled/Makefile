all: clean sim

bsg_trace_rom_%.tr:
	python bsg_trace_rom.py $(NUM_LCE_P) $* $(NUM_INSTR_P) $(SINGLE_CCE_P) $(SEED_P) > $@

bsg_trace_rom_%.v: bsg_trace_rom_%.tr
	python $(BSG_IP_CORES_DIR)/bsg_mem/bsg_ascii_to_rom.py $< bsg_trace_rom_$* > $@

